			"\tdescribe 'GET ${1:endpoint}' do",
			"\t\tcontext '未認証の場合' do",
			"\t\t\tbefore { get endpoint }",
			"\t\t\tit_behaves_like 'unauthorized' # 通常通りの認証失敗エラーを返す",
			"\t\tend",
			"",
			"\t\tcontext '認証済みの場合' do",
			"\t\t\tbefore do",
			"\t\t\t\t# 認証処理",
			"\t\t\tend",
			"",
			"\t\t\tcontext '[条件1] 〜場合' do",
			"\t\t\t\tcontext '[条件2] 〜場合' do",
			"\t\t\t\t\tcontext '[条件3] 〜場合' do",
			"\t\t\t\t\t\tcontext '正常系' do",
			"\t\t\t\t\t\t\tcontext '（正常系ケース1）' do",
			"\t\t\t\t\t\t\t\tit 'Status 200 を返す' do",
			"\t\t\t\t\t\t\t\t\t# 処理...",
			"\t\t\t\t\t\t\t\t\tget endpoint, params: {}, headers: authorization_header",
			"\t\t\t\t\t\t\t\t\texpect(response.status).to eq 200",
			"\t\t\t\t\t\t\t\tend",
			"\t\t\t\t\t\t\t\tit '（レスポンスのもっと細かいテストがあれば）' do",
			"\t\t\t\t\t\t\t\t\t# 処理...",
			"\t\t\t\t\t\t\t\t\t# expect(...).to ...",
			"\t\t\t\t\t\t\t\tend",
			"\t\t\t\t\t\t\tend",
			"\t\t\t\t\t\t\tcontext '（正常系ケース2）' do",
			"\t\t\t\t\t\t\t\t# 同上",
			"\t\t\t\t\t\t\tend",
			"\t\t\t\t\t\tend",
