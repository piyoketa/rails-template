			"\t\t\t\t\tcontext '[異常系] 〜（条件3が満たされないケース1）場合' do",
			"\t\t\t\t\t\tit 'Status 404 と エラーコード page_not_found を返す' do",
			"\t\t\t\t\t\t\tget endpoint, params: {}, headers: authorization_header",
			"\t\t\t\t\t\t\texpect(response.status).to eq 404",
			"\t\t\t\t\t\t\texpect(response_body_error_code).to eq 'page_not_found'",
			"\t\t\t\t\t\tend",
			"\t\t\t\t\tend",
			"\t\t\t\tend",
			"\t\t\t\tcontext '[異常系] 〜（条件2が満たされないケース1）場合' do",
			"\t\t\t\t\tcontext '〜の場合' do",
			"\t\t\t\t\t\tit '〜する'",
			"\t\t\t\t\tend",
			"\t\t\t\tend",
			"\t\t\tend",
			"\t\tend",
			"\t\tcontext '[異常系] 〜（条件1が満たされないケース1）場合' do",
